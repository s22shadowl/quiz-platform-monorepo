{
  "name": "quiz-platform-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "apps/web/**/*.{js,ts,svelte,json,md}": [
      "prettier --write"
    ],
    "apps/web/**/*.{js,ts,svelte}": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "prepare": "husky"
  },
  "devDependencies": {
    "turbo": "^1.10.0"
  }
}